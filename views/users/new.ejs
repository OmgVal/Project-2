<div class="container">
    <div class="row justify-content-center align-items-center inner-row">
        <div class="col-md-5">
            <div class="form-box">
                <div class="form-title">
                    <h1 class="mb-3 fw-bold text-center">Sign Up!</h1>
                </div>
                </div>
               
                
                <form action="/users" method="POST">
                    <div class="form-floating mb-3">
                        <input class="form-control form-control-sm" placeholder="Email" id="floatingInput" type="email" name="email" required>
                        <label for="floatingInput">Email</label>
                    </div>
            
                    <div class="form-floating mb-3">
                        <input class="form-control form-control-sm" placeholder="Password" id="floatingPassword" type="password" name="password" required>
                        <label for="floatingPassword">Password</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input class="form-control form-control-sm" placeholder="Username" id="floatingUsername" type="username" name="username" required>
                        <label for="floatingUsername">Username</label>
                    </div>
                    
                    <div class="mt-3">
                        <button class="btn btn-secondary inline-height" type="submit">Sign Up</button>
                        <p>Already have an account? <a href="/users/login">Login</a></p>
                    </div>
                </form>
            </div>
            </div>
</div>


