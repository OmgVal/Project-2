<div class="container">

    

    <div class="row d-flex flex-row">
        <h1><i class="fa-solid fa-user"></i> @<%= user.username %></h1>
        <a href="/users/edit" class="text-muted">Edit Username<i class="fa-solid fa-pen"></i></a>
    </div>

    <div class="container text-center text-white mb-5 border-bottom border-4 bg-dark rounded-top">
        <h2> Liked Gifs: </h2>
    </div>
    
    <!-- Add for each loop () -->
    
    <div>
        <% gifs.forEach(gif => { %>
        <a href="/gifs/details/<%= gif.id %>">
                <% if (gif.images.original.url != " ") { %>
                <img id="gifImg" src="<%= gif.images.original.url %>" alt="<%= gif.title %>"/> 
                <% } %>
        </a>
        <% }) %>
    </div>

</div>

