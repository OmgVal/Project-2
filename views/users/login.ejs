<div class="container">
    <div class="row justify-content-center align-items-center inner-row">
        <div class="col-md-5">
            <div class="form-box">
                <div class="form-title">
                    <h1 class="mb-3 fw-bold">Please login</h1>
                </div>
                </div>
                <% if (message) { %>
                <p><%= message %></p>
                <% } %>
                
                <form action="/users/login" method="POST">
                    <div class="form-floating mb-3">
                        <input class="form-control form-control-sm" placeholder="Email" id="floatingInput" type="email" name="email" required>
                        <label for="floatingInput">Email</label>
                    </div>
            
                    <div class="form-floating mb-3">
                        <input class="form-control form-control-sm" placeholder="Password" id="floatingPassword" type="password" name="password" required>
                        <label for="floatingPassword">Password</label>
                    </div>
                    
                    <div class="mt-3">
                        <button class="btn primaryBg" type="submit">Login</button>
                    </div>
                </form>
            </div>
            </div>
</div>