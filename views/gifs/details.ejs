<div class="container justify-content-center">

  <div class="container text-center">
    <div>
      <h1><%=  gif.title %></h1>
        <a href="<%=  gif.url %>">source</a>
    </div>
    
    <div class="container">
      <img src="<%= gif.images.original.url %>" class="rounded mb-10" alt="<%= gif.title %>"/>
      
      <div class="container d-grid gap-2 d-md-flex justify-content-md-end mt-10">
          <form method="POST" action="/users/like">
              <input hidden value="<%= gif.title %>" name="title" />
              <input hidden value="<%= gif.id %>" name="giphyId" />
              <button class="btn btn-secondary me-md-2" type="submit"><i class="fa-solid fa-heart"></i> Like</button>
          </form>
          
          <form method="POST" action="/users/like/?_method=DELETE" >
              <input hidden value="<%= gif.title %>" name="title" />
              <input hidden value="<%= gif.id %>" name="giphyId" />
              <button class="btn btn-secondary" type="submit"><i class="fa-solid fa-heart-crack"></i> Unlike</button> 
          </form>
      </div>
      
      <div class="container mt-4">

        <div class="container text-start align-content-center">
          <div class="row border-bottom border-5">
            <h5 class="grid gap-3 p-2 rounded text-bg-dark">Comments:</h5>
            <% if(dbGif.comments){ %>
              <div class="col border-bottom border-dark">
              <% dbGif.comments.forEach(comment => { %>
                    <p class="fw-bold mb-n3"> <%= comment.name %></p>
                    <p class=""><%= comment.content %></p>
            </div>
            <% }) %>
          <% } %>
        </div>
        
        <form method="POST" action="/gifs/details/<%= gif.id %>">
          <div class="mb-3 text-start mt-4">
            <label for="exampleFormControlTextarea1" class="form-label fw-bold text-secondary">Write your comment here:</label>
            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" type="text" name="content" required></textarea>
          </div>
      
          <div class="mb-3">
            <input hidden type="text" name="name">
            <input type="submit">
          </div>
        </form>
      </div>
      
    </div>
          
          
    </div>
</div>







