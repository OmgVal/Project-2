
<div class="container mt-6">
  <div class="border-bottom border-4">
    <h3 class="fw-bold">Search for Gifs:</h3>
  
    <form method="GET" action="/gifs/">
        <lable for="search"></lable>
        <input class="w-75 mb-3" type="text"  id="search" name="gifSearch" />
      
        <button class="btn btn-secondary" type="submit">Submit</button>
      </form>

  </div>

  <div class="container-md d-flex flex-wrap text-center mt-3 bg bg-dark rounded">
      <% gifs.forEach(gif => { %>
      <a href="/gifs/details/<%= gif.id %>">
              <% if (gif.images.original.url != " ") { %>
              <img id="gifImg" src="<%= gif.images.original.url %>" class="rounded float-start border border-dark border-5" width= auto height= auto alt="<%= gif.title %>"/> 
              <% } %>
      </a>
      <% }) %>
  </div>
</div>
